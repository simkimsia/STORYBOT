<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="false">
	
	<fx:Script>
		<![CDATA[
			private var _selected:Boolean = false;
			protected function rbGenre_clickHandler(event:MouseEvent):void
			{
				if(_selected){
					rbGenre.selected = false;
					_selected = false;
				}else{
					rbGenre.selected = true;
					_selected = true;
				}
				
			}
		]]>
	</fx:Script>
	
	
	<s:RadioButton
		id="rbGenre"
		click="rbGenre_clickHandler(event)"
		skinClass="org.storybot.skins.radiobutton.GenreRadioButtonSkin" 
		label="{data}" />
</s:ItemRenderer>
