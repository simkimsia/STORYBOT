<?xml version="1.0" encoding="utf-8"?>
<s:SkinnableContainer 
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:mx="library://ns.adobe.com/flex/mx"
	xmlns:controls="org.storybot.controls.*"
	width="100%" height="100%" 
	skinClass="org.storybot.skins.container.BasePanelSkin">
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			[Bindable]
			private var lefToRightDP:ArrayCollection = new ArrayCollection(["LEFT TO RIGHT", "RIGHT TO LEFT"]);
			[Bindable]
			private var dummyPages:ArrayCollection = new ArrayCollection([1,1,1,1,1,1,1]);
		]]>
	</fx:Script>
	<s:Group left="0" right="0" top="0" bottom="0">
		<s:List 
			left="30" right="5" top="30" bottom="5" 
			dataProvider="{dummyPages}"
			skinClass="org.storybot.skins.PageListSkin"
			itemRenderer="org.storybot.controls.renderer.PageSetRenderer">
			<s:layout>
				<s:TileLayout horizontalGap="25" verticalGap="5" />
			</s:layout>
		</s:List>
		<s:DropDownList 
			right="5" top="5" width="125"
			dataProvider="{lefToRightDP}"
			selectedIndex="0"
			skinClass="org.storybot.skins.dropdownlist.PageFlipDropDownListSkin"></s:DropDownList>
		<s:Label right="135" top="10" color="#D1D3D4" fontFamily="Century Gothic" fontSize="13"
				 fontWeight="bold" text="PAGE FLIP"/>
	</s:Group>
</s:SkinnableContainer>
